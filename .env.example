# Kit Fundador v2.0 - Environment Variables Example
# Copy this file to .env and fill with your actual values
# NEVER commit .env to git

# ============================================
# DATABASE
# ============================================
DATABASE_URL=postgresql://user:password@localhost:5432/myapp_dev
POSTGRES_USER=dev
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=myapp_dev

# ============================================
# CACHE
# ============================================
REDIS_URL=redis://localhost:6379

# ============================================
# APPLICATION
# ============================================
NODE_ENV=development
PORT=3000
LOG_LEVEL=debug

# ============================================
# AUTHENTICATION
# ============================================
JWT_SECRET=your_jwt_secret_here_min_32_characters_long
SESSION_SECRET=your_session_secret_here_min_32_characters
TOKEN_EXPIRATION=24h

# ============================================
# EXTERNAL APIs (if needed)
# ============================================
# API_KEY=your_api_key_here
# API_SECRET=your_api_secret_here
# STRIPE_SECRET_KEY=sk_test_...
# SENDGRID_API_KEY=SG...

# ============================================
# OBSERVABILITY
# ============================================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_ADMIN_PASSWORD=admin

# ============================================
# FEATURE FLAGS
# ============================================
# FEATURE_NEW_UI=true
# FEATURE_BETA_ACCESS=false
